{
  "commandHistory": {
    "maxItems": 100
  },
  "permissions": {
    "Bash": "ask",
    "Edit": "ask",
    "Write": "ask",
    "Read": "allow",
    "LS": "allow",
    "Glob": "allow",
    "Grep": "allow"
  },
  "mcpServers": {
    "filesystem": {
      "command": "mcp-server-filesystem",
      "args": ["--root", "$HOME/Documents"]
    }
  }
}
